# Cambodia Geocoding API Server Environment Configuration
# Copy this file to .env and modify as needed

# OSM Data Source
# Default: Cambodia from Geofabrik
PBF_URL=https://download.geofabrik.de/asia/cambodia-latest.osm.pbf

# Alternative data sources:
# Phnom Penh only (smaller, faster import):
# PBF_URL=https://download.geofabrik.de/asia/cambodia/phnom-penh-latest.osm.pbf
# 
# Thailand (if you want to expand coverage):
# PBF_URL=https://download.geofabrik.de/asia/thailand-latest.osm.pbf

# Database Configuration
NOMINATIM_PASSWORD=nominatim
POSTGRES_USER=nominatim
POSTGRES_DB=nominatim

# Update Mode
# none: No updates after initial import (recommended for production)
# once: Update once after import
# continuous: Continuous updates (requires more resources)
NOMINATIM_UPDATE_MODE=none

# API Configuration
# Port mapping (external:internal)
PORT=8080

# Optional: Custom memory settings for large imports
# Uncomment and adjust based on your server resources
# POSTGRES_SHARED_BUFFERS=256MB
# POSTGRES_WORK_MEM=50MB
# POSTGRES_MAINTENANCE_WORK_MEM=256MB